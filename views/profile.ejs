<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
        <div class="flex justify-end w-full">
            <a href="/logout" class="bg-red-500 rounded-md px-3 py-2 text-sm inline-block mb-3" >logout</a>
        </div>
        <div class="flex items-start gap-3" >
            <div class="w-20 h-20 rounded-md overflow-hidden">
                <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profilepic %>" alt="">
            </div>
            <h3 class="text-3xl mt-5"><span class="font-light" >Hello</span>, <%=user.name %> ğŸ‘‹ğŸ»</h3>
        </div>
        <h5 class="mb-5 mt-3" >you can create a new post. </h5>
        <form action="/post" method="post">
            <textarea name="content" placeholder="what's on your mind?" class=" block w-1/3 p-3 outline-none resize-none border-2 bg-transparent border-zinc-800 rounded-md "></textarea>
            <input class="px-3 mt-2 w-40 py-2 bg-blue-500 text-sm block rounded-md" type="submit" value="Create New Post">
        </form>
        <div class="posts mt-14 ">
            <h3 class="text-zinc-400">Your Posts. </h3>
            <div class="postcontainer mt-5  w-full">

                <%user.posts.reverse().forEach((post)=> {%>
                <div class="post m-4 w-1/3  p-4 border-2 rounded-md bg-zinc-800 border-zinc-700">
                    <h4 class="text-blue-500 mb-2" ><%= user.name%></h4>
                    <p class="text-sm tracking-tight "><%= post.content%></p>
                    <small class="mt-4 inline-block"><%= post.likes.length %> likes</small>
                    <div class="btns flex gap-4 mt-1">
                        <a href="/like/<%= post._id%>" class="text-blue-500">
                            <%if(post.likes.indexOf(user._id)=== -1){%>
                                Like
                            <%} else {%>
                                Unlike
                            <%}%>

                        </a>
                        <a href="/edit/<%= post._id%>" class="text-zinc-600">edit </a>
                    </div>
                </div>
                <%})%>


            </div>
        </div>
    </div>
</body>
</html> 